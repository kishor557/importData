%p#notice= notice
%h1 Events
%table
  %thead
    %tr
      %th Title
      %th Location
      %th Date
      %th{:colspan => "3"}
  %tbody
    - @events.each do |event|
      %tr
        %td= event.title
        %td= event.location
        %td= event.date
        %td= link_to 'Show', event
        %td= link_to 'Edit', edit_event_path(event)
        %td= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Event', new_event_path
%br
= link_to 'View All Participants', participants_path
%br
= link_to 'View All Sheets', import_sheets_path
