%p#notice= notice
%h1 Participants
%table
  %thead
    %tr
      %th Name
      %th Email
      %th{:colspan => "3"}
  %tbody
    - @participants.each do |participant|
      %tr
        %td= participant.name
        %td= participant.email
        %td= link_to 'Show', participant
        %td= link_to 'Edit', edit_participant_path(participant)
        %td= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Participant', new_participant_path
%br
= link_to 'View All Events', events_path
%br
= link_to 'View All Sheets', import_sheets_path
